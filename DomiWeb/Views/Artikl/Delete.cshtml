@model Artikl

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Uređivanje Artikala</h2>
            <hr />
        </div>
        @*  <div asp-validation-summary="All"></div> *@
        <div class="mb-2 row p-1">
            <label asp-for="Id" class="p-0"></label>
            <input asp-for="Id" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Naziv" class="p-0"></label>
            <input asp-for="Naziv" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Kategorija" class="p-0"></label>
            <input asp-for="Kategorija" disabled class="form-control" />
            
        </div>
        <div class="mb-2 row p-1">
            <label asp-for="Cijena" class="p-0"></label>
            <input asp-for="Cijena" disabled class="form-control" />
            
        </div>
       @*  <div class="mb-2 row p-1">
            <label asp-for="Ocijena" class="p-0"></label>
            <input asp-for="Ocijena" disabled class="form-control" />
            
        </div> *@
        <div class="row">
            <div class="col-6">
                <button type="submit" id="deleteButton" class="btn btn-danger form-control">Obriši</button>
            </div>
            <div class="col-6">
                <a asp-controller="Artikl" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Vrati se nazad
                </a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        
        <script src="~/js/sweetAlertScript.js"></script>
    }
}
