@model Artikl


<h2>Ocijeni artikl</h2>

<div style="text-align: center;">
    <img src="~/images/stars.png" alt="Slika artikla" style="max-width:500px; max-height: 500px; margin-bottom: 20px;" />

    <form asp-action="Ocijeni" method="post">
        <input type="hidden" asp-for="Id" />
        <div style="margin-bottom: 10px;">
            <label for="ocjena">Ocjena:</label>
            <input type="number" name="ocjena" id="ocjena" min="1" max="5" step="1" />
        </div>
        <div>
            <button type="submit" class="btn btn-secondary mx-2">
                <i class="bi bi-star-half"></i>  Ocijeni Artikl

            </button>
      
    </form>

</div>
<div class="col-12  pt-2 justify-content-center">
    <a asp-controller="Artikl" asp-action="Index" class="btn btn-outline-secondary border form-control">
        Vrati se nazad
    </a>
</div>

